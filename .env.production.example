# SwiStack Production Environment Configuration

# Domain Configuration
BASE_DOMAIN=swistack.dev
SSL_ENABLED=true

# Database Configuration
DB_PASSWORD=your_secure_database_password_here
POSTGRES_DB=swistack
POSTGRES_USER=swistack

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# AI Service Configuration
MISTRAL_API_KEY=your_mistral_api_key_here

# MinIO Configuration (S3-compatible storage)
MINIO_ACCESS_KEY=swistack_minio_access_key
MINIO_SECRET_KEY=your_very_secure_minio_secret_key_here

# Monitoring Configuration
GRAFANA_PASSWORD=your_secure_grafana_admin_password

# Email Configuration (for SSL certificates and notifications)
EMAIL=admin@swistack.dev

# Resource Limits
MAX_CONTAINERS_PER_USER=5
MAX_CONTAINER_MEMORY=512m
MAX_CONTAINER_CPU=0.5
CONTAINER_IDLE_TIMEOUT=3600

# Security Configuration
CORS_ORIGINS=https://swistack.dev,https://*.swistack.dev
RATE_LIMIT_API=100
RATE_LIMIT_PREVIEW=50

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=swistack-backups
BACKUP_S3_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_CONTAINER_ISOLATION=true
FEATURE_CUSTOM_DOMAINS=true
FEATURE_RESOURCE_MONITORING=true
FEATURE_AUTO_SCALING=false

# Application URLs
FRONTEND_URL=https://swistack.dev
BACKEND_URL=https://api.swistack.dev