{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "@swistack/shared/*": ["packages/shared/src/*"],
      "@swistack/shared": ["packages/shared/src/index"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next"
  ]
}