{
  "name": "swistack",
  "version": "1.0.0",
  "description": "Browser-based coding platform monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n \"shared,backend,frontend\" -c \"yellow,green,blue\" \"npm run dev -w @swistack/shared\" \"npm run dev -w @swistack/backend\" \"npm run dev -w @swistack/frontend\"",
    "build": "npm run build -ws --if-present",
    "build:shared": "npm run build -w @swistack/shared",
    "build:backend": "npm run build -w @swistack/backend",
    "build:frontend": "npm run build -w @swistack/frontend",
    "test": "npm run test -ws --if-present",
    "test:watch": "npm run test:watch -ws --if-present",
    "lint": "eslint packages --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint packages --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check -ws --if-present",
    "clean": "npm run clean -ws --if-present && rimraf node_modules/.cache",
    "docker:dev": "docker-compose up --build",
    "docker:dev:detach": "docker-compose up --build -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
    "docker:prod:detach": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker-compose down",
    "docker:down:prod": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:frontend": "docker-compose logs -f frontend",
    "docker:logs:backend": "docker-compose logs -f backend",
    "docker:build": "docker buildx build .",
    "docker:build:dev": "docker buildx build --target development -t swistack:dev .",
    "docker:build:prod": "docker buildx build --target production -t swistack:prod .",
    "docker:run:dev": "docker run -p 3000:3000 -p 3001:3001 swistack:dev",
    "docker:run:prod": "docker run -p 3000:3000 -p 3001:3001 swistack:prod",
    "test:qa": "node test-qa.js",
    "test:api": "npm run test:qa",
    "test:all": "npm run test && npm run test:qa",
    "postinstall": "npm run build:shared"
  },
  "devDependencies": {
    "@types/mime-types": "^3.0.1",
    "@types/minio": "^7.1.0",
    "@types/multer": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "axios": "^1.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "form-data": "^4.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@types/socket.io": "^3.0.1",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.8.1"
  }
}
